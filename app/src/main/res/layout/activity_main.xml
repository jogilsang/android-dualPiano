<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"

    android:baselineAligned="false">

    <!-- First display -->
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:id="@+id/first_screen"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"

            >

            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
                android:background="@mipmap/do_circle2"
                android:id="@+id/first_doo"
                android:orientation="vertical"

            >


        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/re_circle"
                android:id="@+id/first_re"
                android:orientation="vertical"

                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/mi_circle"
                android:id="@+id/first_mi"
                android:orientation="vertical"
                >


            </LinearLayout>
            

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/pa_circle"
                android:id="@+id/first_pa"
                android:orientation="vertical"
                >



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/sol_circle"
                android:id="@+id/first_sol"
                android:orientation="vertical"
                >


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/la_circle"
                android:id="@+id/first_la"
                android:orientation="vertical"
                >

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/si_circle"
                android:id="@+id/first_si"
                android:orientation="vertical"
                >



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/do2_circle"
                android:id="@+id/first_doo2"
                android:orientation="vertical"
                >



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/ic_action_conversion"
                android:id="@+id/first_conversion"
                android:orientation="vertical"
                >


                
            </LinearLayout>
        </LinearLayout>

        

        


    </LinearLayout>

    <!-- disivision-->

    <View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="#FF000000"
        android:layout_gravity="center"
        />


    <!-- Second display-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:id="@+id/second_screen"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/do_circle2"
                android:id="@+id/second_doo"
                android:orientation="horizontal"
                >


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/re_circle"
                android:id="@+id/second_re"
                android:orientation="horizontal"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/mi_circle"
                android:id="@+id/second_mi"
                android:orientation="horizontal"
                >



            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/pa_circle"
                android:id="@+id/second_pa"
                android:orientation="horizontal"
                >




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/sol_circle"
                android:id="@+id/second_sol"
                android:orientation="horizontal"
                >



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@mipmap/la_circle"
                android:id="@+id/second_la"
                >


            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@mipmap/si_circle"
                android:id="@+id/second_si"
                >



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@mipmap/do2_circle"
                android:id="@+id/second_doo2"
                android:orientation="horizontal"
                >


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/ic_action_conversion"
                android:id="@+id/second_conversion"
                android:orientation="horizontal"
                >
            </LinearLayout>
        </LinearLayout>






    </LinearLayout>


</LinearLayout>
